{% extends 'base.html.twig' %}

{% block title %}SuMovies{% endblock %}



{% block body %}
<section class="films">
    {% for film in films %}
    <article>
        <h2>{{film.title}}</h2>
        <div class="content">
            <img src={{film.image}} alt="">
            <p>Sortie le {{film.createdAt | date ('d/m/Y')}}</p>
            <p>Genre : </p>
            <p>Durée : {{film.duree | date('H')*60 +film.duree | date('i') }} minutes</p>
            
            <h3>Synopsys</h3>
            <div class="text-justify"; style="white-space: pre-line">
            {{film.synopsys}}
            </div>

            <a href="{{path('SuMovies_show',{'title' :film.title})}}" class="btn btn-primary">Lire résumé</a>
            <a href="{{path('SuMovies_edit',{'title' :film.title})}}" class="btn btn-primary">Modifier</a>
        </div>
    </article>
    {% endfor %}
</section>

{% endblock %}
